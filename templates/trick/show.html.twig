{# templates/trick/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ trick.name }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        {# Section d'en-tête avec image de fond moins zoomée #}
        <div class="bg-image" style="background-image: url('{{ asset(trick.images.first.imgURL) }}'); height: 400px; background-size: contain; background-position: center; background-repeat: no-repeat;">
        </div>

        {# Affichage du nom du trick et de la catégorie en dessous #}
        <h1 class="text-center mt-3">{{ trick.name }}</h1>
        <p class="text-center mt-1"><strong>Catégorie :</strong> {{ trick.category }}</p>

        {# Ligne de séparation avant la description #}
        <hr class="my-4">

        {# Description centrée avec un titre plus petit #}
        <h4 class="text-center mb-4"><strong>Description</strong></h4>
        <p class="text-center">{{ trick.content|nl2br }}</p>

        {# Ligne de séparation après la description #}
        <hr class="my-4">

        <p class="mt-2 mb-5"><strong>Médias</strong></p>

        {# Affichage de toutes les images avec une taille uniforme et un écart réduit avec les vidéos #}
        <div class="row mb-2">
            {% for image in trick.images %}
                <div class="col-md-4 mb-3"> {# Utilisation de col-md-4 pour avoir 3 images par ligne #}
                    <div class="text-center"> {# Centrer le contenu #}
                        <form method="post" action="{{ path('delete_image', {'id': image.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette image ?');" style="position: relative;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm" style="position: absolute; bottom: 10px; left: 50%; transform: translateX(-50%);">
                                <i class="fa fa-trash"></i>
                            </button>
                        </form>
                        <img src="{{ asset(image.imgURL) }}" class="img-fluid" alt="{{ trick.name }}" style="height: 200px; object-fit: cover;"> {# Image bien proportionnée avec object-fit: cover #}
                    </div>
                </div>
            {% else %}
                <p>Aucune image disponible</p>
            {% endfor %}
        </div>


        {# Affichage de toutes les vidéos avec une taille réduite et moins d'écart avec les images #}
        <div class="row mt-2">
            {% for videoEmbedCode in videosWithEmbedCode %}
                <div class="col-md-6 mb-3">
                    <div class="embed-responsive">
                        {{ videoEmbedCode|raw }} {# Code d'intégration de la vidéo #}
                    </div>
                </div>
            {% else %}
                <p>Aucune vidéo disponible</p>
            {% endfor %}
        </div>

        {# Bouton pour revenir à la page d'accueil juste avant les vidéos #}
        <a href="{{ path('app_home') }}" class="btn btn-primary mt-4"><i class="fa-solid fa-house"></i> Retour</a>

        {# Ligne de séparation après les médias pour un bon espacement avec la section des commentaires #}
        <hr class="my-4">

        {# Section des commentaires #}
        <div class="mt-3">
            <h4 class="text-center mb-4"><strong>Espace de discussion</strong></h4>

            <div>
                {# Formulaire pour ajouter un commentaire si l'utilisateur est connecté #}
                {% if app.user %}
                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.message) }}
                            {{ form_widget(form.message) }}
                        </div>
                        <button type="submit" class="btn btn-primary mt-3 mb-5">Poster</button>
                    {{ form_end(form) }}
                {% else %}
                    <p>Veuillez vous <a href="{{ path('app_login') }}">connecter</a> pour commenter.</p>
                {% endif %}
            </div>

            {# Liste des 10 premiers commentaires avec bordures pour les distinguer #}
            <div class="comments-section">
                {% for commentaire in commentaires[:10] %}
                    <div class="comment mb-3 border p-3 rounded">
                        <div class="d-flex">
                            <img src="{{ asset('uploads/images/imgProfilDefault.jpg') }}" alt="default-user" class="rounded-circle me-3" style="height: 50px; width: 50px;">
                            
                            <div>
                                <p class="mb-0">{{ commentaire.message }}</p> {# Message du commentaire #}
                                <div class="d-flex justify-content-between">
                                    <p class="mb-0"><strong>{{ commentaire.idUser.username }}</strong></p> {# Pseudo de l'utilisateur #}
                                    <p class="small text-muted">{{ commentaire.dateCreated|date('d/m/Y') }}</p> {# Date de création sans l'heure #}
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>Aucun commentaire pour le moment ...</p>
                {% endfor %}
            </div>

            {# Section cachée pour les commentaires supplémentaires #}
            <div class="comments-section d-none" id="extra-comments">
                {% for commentaire in commentaires[10:] %}
                    <div class="comment mb-3 border p-3 rounded">
                        <div class="d-flex">
                            <img src="{{ asset('uploads/images/imgProfilDefault.jpg') }}" alt="default-user" class="rounded-circle me-3" style="height: 50px; width: 50px;">
                            
                            <div>
                                <p class="mb-0">{{ commentaire.message }}</p> {# Message du commentaire #}
                                <div class="d-flex justify-content-between">
                                    <p class="mb-0"><strong>{{ commentaire.idUser.username }}</strong></p> {# Pseudo de l'utilisateur #}
                                    <p class="small text-muted">{{ commentaire.dateCreated|date('d/m/Y') }}</p> {# Date de création sans l'heure #}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {# Bouton "Voir plus" si plus de 10 commentaires #}
            {% if commentaires|length > 10 %}
                <div class="text-center mt-4">
                    <button id="show-more-comments-btn" class="btn btn-primary">Voir plus de commentaires</button>
                </div>
            {% endif %}
        </div> {# Fermer la div de la section des commentaires #}
    </div> {# Fermer la div du conteneur #}

    {# Script JavaScript pour afficher les commentaires supplémentaires #}
    <script>
        document.getElementById('show-more-comments-btn').addEventListener('click', function() {
            document.getElementById('extra-comments').classList.remove('d-none');
            this.style.display = 'none';
        });
    </script>
{% endblock %}
