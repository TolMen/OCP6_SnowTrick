{% extends 'base.html.twig' %}

{% block title %}Édition du trick{% endblock %}

{% block body %}
<div class="container mt-5 d-flex justify-content-center align-items-center flex-column" style="height: auto;">
    <h2 class="mb-4 text-center">Éditer le trick : {{ trick.name }}</h2>

    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom du trick'}}) }}
                {{ form_errors(form.name) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.category) }}
                {{ form_widget(form.category, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la catégorie'}}) }}
                {{ form_errors(form.category) }}
            </div>
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(form.content) }}
        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'placeholder': 'Décrivez le trick ici...', 'rows': 5}}) }}
        {{ form_errors(form.content) }}
    </div>

    <div class="text-center mt-5">
        <button type="submit" class="btn btn-primary" title="Update"><i class="fa-solid fa-pen"></i></button>
        
        <!-- Bouton de suppression -->
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" title="Supprimer">
            <i class="fa-solid fa-trash"></i>
        </button>
        
        <a href="{{ path('app_home') }}" class="btn btn-dark" title="Annuler">
            <i class="fa-solid fa-xmark"></i>
        </a>
    </div>

    {{ form_end(form) }}

    <!-- Modal de confirmation de suppression -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmation de suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Êtes-vous sûr de vouloir supprimer le trick <strong>{{ trick.name }}</strong> ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <form action="{{ path('trick_delete', {id: trick.id}) }}" method="post">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
