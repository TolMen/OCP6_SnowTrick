{% extends 'base.html.twig' %}

{% block title %}SnowTricks{% endblock %}

{% block body %}
<div class="home-banner d-flex align-items-center">
    <div class="container text-right">
        <div class="row justify-content-end">
            <div class="col-md-6">
                <h1 class="display-4 text-light">Explorez le monde des figures de snow</h1>
                <p class="lead text-light">Découvrez et maîtrisez les figures emblématiques des riders !</p>
                <a href="#" class="btn btn-primary btn-lg">Voir les figures</a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        {% for trick in tricks %}
            <div class="col-md-3">
                <div class="card mb-4">
                    {% if trick.images|length > 0 %}
                        <img src="{{ trick.images[0].imgURL }}" class="card-img-top" alt="{{ trick.name }}">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ trick.name }}</h5>
                        <p class="card-text">{{ trick.content|slice(0, 50) ~ '...' }}</p>
                        <a href="#" class="btn btn-primary">Voir plus</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun trick disponible.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
