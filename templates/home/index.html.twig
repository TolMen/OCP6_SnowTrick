{% extends 'base.html.twig' %}

{% block title %}SnowTricks{% endblock %}

{% block body %}
<div id="top"></div> <!-- Ajout d'un ID pour le haut de la page -->

<div class="home-banner d-flex align-items-center">
    <div class="container text-right">
        <div class="row justify-content-end">
            <div class="col-md-6">
                <h1 class="display-4 text-light">Explorez le monde des figures de snow</h1>
                <p class="lead text-light">Découvrez et maîtrisez les figures emblématiques des riders !</p>
                <a href="#tricks" class="btn btn-primary btn-lg">Voir les figures</a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5 text-center">
    <h2 class="mb-4">Liste des tricks</h2>
    <div style="margin-bottom: 50px;"></div>
    <div class="row" id="tricks"> <!-- Ajout d'un ID pour la liste des tricks -->
        {% for trick in tricks %}
            <div class="col-md-3">
                <div class="card mb-4">
                    {% if trick.images|length > 0 %}
                        <img src="{{ asset(trick.images[0].imgURL) }}" class="card-img-top img-fluid" alt="{{ trick.name }}" style="height: 200px; object-fit: cover;">
                    {% endif %}
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ trick.name }}</h5>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun trick disponible.</p>
        {% endfor %}
    </div>
</div>

<!-- Flèche de retour en haut -->
<a href="#tricks" class="scroll-to-top down" title="Descendre vers les tricks">&#8595;</a>
<a href="#top" class="scroll-to-top up" title="Retour en haut">&#8593;</a>

{% endblock %}
